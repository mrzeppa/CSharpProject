@model LibraryProject.Models.Author

<tr>
    <td>
        @Html.DisplayFor(modelItem => Model.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.DateOfBirth)
    </td>
    <td class="text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id"><button class="defaultButton">Edit</button></a> |
        <a asp-action="Details" asp-route-id="@Model.Id"><button class="defaultButton">Details</button></a> |
        <a asp-action="Delete" asp-route-id="@Model.Id"><button class="redButton">Delete</button></a>
    </td>
</tr>