@model IEnumerable<LibraryProject.Models.Book>

@{
    ViewData["Title"] = "Show";
}

<div class="d-flex justify-content-between">
    <div>
        <h1 class="float-left">Books</h1>

    </div>
    <div>
        <a asp-action="Create"><button class="btn btn-info">Create new</button></a>

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfPublish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearOfPublish)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>
