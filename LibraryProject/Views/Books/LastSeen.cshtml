@model IEnumerable<LibraryProject.Models.Book>

@{
    ViewData["Title"] = "LastSeen";
}


@if (Model.Count() > 0)
{
    <div class="d-flex justify-content-between">
        <div>
            <table-name name="Books seen recently" class="float-left"/>
        </div>
    </div>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearOfPublish)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearOfPublish)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author.Name) @Html.DisplayFor(modelItem => item.Author.Surname)
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.Id"><button class="defaultButton">Details</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>You don't have any books that you have seen recently! Click <a asp-controller="Books" asp-action="Index">here</a> to check list of books.</h3>
}