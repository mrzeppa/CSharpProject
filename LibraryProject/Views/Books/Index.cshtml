@model IEnumerable<LibraryProject.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <div>
        <table-name name="Books"/>
    </div>
    <div>
        <select id="searchSelect" class="mdb-select">
            <option>@Html.DisplayNameFor(model => model.Title)</option>
            <option>@Html.DisplayNameFor(model => model.Author)</option>
        </select>
        <input id="search2" type="text" name="SearchString" placeholder="Search... " />
    </div>
    <div>
        <a asp-action="Create"><button class="defaultButton">Create new</button></a>

    </div>

</div>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfPublish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearOfPublish)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name) @Html.DisplayFor(modelItem => item.Author.Surname)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id"><button class="defaultButton">Edit</button></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><button class="defaultButton">Details</button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><button class="redButton">Delete</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>



