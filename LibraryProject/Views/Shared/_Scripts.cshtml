<script>

    $("#search2").on("keyup", function () {
        var searchString = $(this).val();
        $("tr").each(function (results) {
            if (results !== 0) {
                if ($("#searchSelect").val() === "Title") {
                    var id = $(this).find("td:nth-child(1)").text();
                    if (id.indexOf(searchString) !== 0 && id.toLowerCase().indexOf(searchString.toLowerCase()) < 0) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }
                else if ($("#searchSelect").val() === "Author name") {
                    var id = $(this).find("td:nth-child(4)").text();
                    if (id.indexOf(searchString) !== 0 && id.toLowerCase().indexOf(searchString.toLowerCase()) < 0) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                }
            }
        })
    });
</script>